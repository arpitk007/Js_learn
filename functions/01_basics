// A function to print each letter of "HITESH" on a new line
function sayMyName() {
    console.log("H");
    console.log("I");
    console.log("T");
    console.log("E");
    console.log("S");
    console.log("H");
}

// Uncomment the line below to call sayMyName and see each letter printed
